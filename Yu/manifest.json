{
    "manifest_version": 3,
    "update_url": "https://github.com/Neotoxic-off/Yu/",
    "name": "Yu",
    "version": "1.0",
    "description": "Unlock YouTube from unwanted elements",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["dist/bundle.js"]
      }
    ],
    "icons": {
      "96": "icons/96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "neotoxic.off@gmail.com"
        }
    }
}